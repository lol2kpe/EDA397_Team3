<p id="notice"><%= notice %></p>

<h1>Hospitals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hospitaltype</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Rating</th>
      <th>Comments</th>
      <th>Openinghours</th>
      <th>Address</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.name %></td>
        <td><%= hospital.hospitalType %></td>
        <td><%= hospital.latitude %></td>
        <td><%= hospital.longitude %></td>
        <td><%= hospital.rating %></td>
        <td><%= hospital.comments %></td>
        <td><%= hospital.openingHours %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.phoneNumber %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

